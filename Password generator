import random
#lower case letters
lower="abcdefghijklmnopqrstuvwxyz"
#upper case letters
upper= "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
numbers = "1234567890"
symbols="!@#$^&()_+/"

print("Password Generator")
length=int(input("Enter length of Password: "))

n_lower=int(input("Enter required no.of lower letters: "))
n_upper=int(input("Enter required no.of upper letters: "))
n_numbers=int(input("Enter required no.of numbers: "))
n_symbols=int(input("Enter required no.of symbols: "))

all =lower+upper+numbers+symbols

Password ="" .join(random.sample(all,length))
print("Your Password= ",Password)
